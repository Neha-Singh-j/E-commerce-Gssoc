<%-include('../partials/header')%>
<%-include('../partials/flash')%>

<div class="container" style="margin-top: 100px; margin-bottom: 100px;">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-lg" style="border-radius: 15px; overflow: hidden;">
                <div class="card-header py-3" style="background: linear-gradient(to right, #6a11cb 0%, #fc4a1a 100%);">
                    <h2 class="text-center text-white mb-0" style="font-family: 'Arial Rounded MT Bold', sans-serif;">Reset Password</h2>
                </div>
                <div class="card-body p-4">
                    <p class="text-center mb-4" style="color: #666;">Please enter your new password.</p>
                    <form action="/reset-password/<%= token %>" method="POST">
                        <div class="mb-4">
                            <label for="password" class="form-label fw-semibold">New Password</label>
                            <div class="position-relative">
                                <input type="password" class="form-control py-2 password-input" name="password" id="password" placeholder="Enter new password" required minlength="6"
                                       style="border-radius: 8px; border: 1px solid #ddd; padding-left: 15px; padding-right: 40px;">
                                <i class="fas fa-eye-slash toggle-password" style="position: absolute; right: 15px; top: 50%; transform: translateY(-50%); cursor: pointer; color: #6a11cb;"></i>
                            </div>
                        </div>
                        <div class="mb-4">
                            <label for="confirmPassword" class="form-label fw-semibold">Confirm Password</label>
                            <div class="position-relative">
                                <input type="password" class="form-control py-2 password-input" name="confirmPassword" id="confirmPassword" placeholder="Confirm new password" required minlength="6"
                                       style="border-radius: 8px; border: 1px solid #ddd; padding-left: 15px; padding-right: 40px;">
                                <i class="fas fa-eye-slash toggle-password" style="position: absolute; right: 15px; top: 50%; transform: translateY(-50%); cursor: pointer; color: #6a11cb;"></i>
                            </div>
                        </div>
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-lg text-white fw-bold py-2" 
                                    style="background: linear-gradient(to right, #6a11cb 0%, #fc4a1a 100%); border-radius: 8px; border: none;">
                                Reset Password
                            </button>
                        </div>
                        <div class="text-center pt-2">
                            <p class="mb-0" style="color: #666;">Remember your password? 
                                <a href="/login" style="color: #fc4a1a; text-decoration: none; font-weight: 600;">Login now</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/password-toggle.js"></script>
<script src="/js/script.js"></script>
<%-include('../partials/footer')%>
